CREATE TABLE commande (
id INTEGER
mot_clef VARCHAR,
action TEXT)

CREATE TABLE motcle (
id INT PRIMARY KEY,
mot VARCHAR(100) NOT NULL,
category VARCHAR(50), 
description TEXT
);

CREATE TABLE actions (
id INT  PRIMARY KEY,
nom VARCHAR(100) NOT NULL,
description VARCHAR(255),
lienscript VARCHAR(255),
motcle INT NOT NULL,
FOREIGN KEY (motcle) REFERENCES motcle(id)
);

CREATE TABLE phrases (
id_phrases INT NOT NULL,
category VARCHAR(10),
taille INT 




CREATE TABLE relations (
id_category INT NOT NULL,
nom VARCHAR(20),
description VARCHAR(20),



CREATE TABLE lycee(
id INTEGER,
nom TEXT,
nb_eleves INTEGER,
date_creation DATE)
