CREATE TABLE category (
  id_category INT PRIMARY KEY,
  nom VARCHAR(20),
  description VARCHAR(100)
);
Cette relation permet de stocker et d’exploiter les domaines auxquels les mots clés feront référence. 

CREATE TABLE motcle (
  id_motcle INT PRIMARY KEY,
  mot VARCHAR(100) NOT NULL,
  description VARCHAR(255),

);
CREATE TABLE association (
id_motcle INT NOT NULL, 
id_category INT NOT NULL,
PRIMARY KEY (id_motcle, id_category),
FOREIGN KEY id_motcle REFERENCES motcle(id_motcle),
FOREIGN KEY id_category REFERENCES category(id_category)
);
relation qui permet de mettre en lien les relations motcle et category car nous sommes dans le cas du lien : plusieurs à plusieurs. Plusieurs catégories peuvent êtres liées à plusieurs mots clés.

CREATE TABLE action (
  id_action INT PRIMARY KEY,
  nom VARCHAR(100) NOT NULL,
  description VARCHAR(255),
  lienscript VARCHAR(255),
  motcle INT NOT NULL,
  FOREIGN KEY (motcle) REFERENCES motcle(id_motcle)
);

CREATE TABLE phrase (
  id_phrase INT PRIMARY KEY,
  category INT NOT NULL,
  taille INT,
  FOREIGN KEY (category) REFERENCES category(id_category)
);



CREATE TABLE commande (
  id_commande INT PRIMARY KEY,
  mot_cle INT NOT NULL,
  action INT NOT NULL,
  FOREIGN KEY (mot_cle) REFERENCES motcle(id),
  FOREIGN KEY (action) REFERENCES action(id_action)
);


CREATE TABLE utilisateur (
  id_utilisateur INT PRIMARY KEY,
  nom VARCHAR(10),
  prenom VARCHAR(10),
  surnom VARCHAR(10),
  mail VARCHAR(20),
  mot_de_passe VARCHAR(50),
  date_utilisation DATE,
  commande INT NOT NULL,
  FOREIGN KEY (commande) REFERENCES category(id_commande)
); 



-- Table facultative = objet d'étude 
CREATE TABLE ville (
  id INT PRIMARY KEY,
  nom VARCHAR(30),
  pays VARCHAR(30),
  nb_eleves INT,
  date_creation DATE
);
