CREATE TABLE commande (
  id INT PRIMARY KEY
  mot_clef VARCHAR(10),
  action VARCHAR(10);

CREATE TABLE motcle(
  id INTEGER PRIMARY KEY,
  mot VARCHAR(100) NOT NULL,
  category VARCHAR(50), 
  description VARCHAR(255)
  FOREIGN KEY (category) REFERENCES category(category_id);
);

CREATE TABLE action (
  id_action INT PRIMARY KEY,
  nom VARCHAR(100) NOT NULL,
  description VARCHAR(255),
  lienscript VARCHAR(255),
  motcle INT NOT NULL,
  FOREIGN KEY (motcle) REFERENCES motcle(id)
);

CREATE TABLE phrase (
  id_phrases INT PRIMARY KEY NOT NULL,
  category VARCHAR(10),
  taille INTEGER
  FOREIGN KEY (category) REFERENCES category(id_category);


CREATE TABLE category (
  id_category INT PRIMARY KEY NOT NULL,
  nom VARCHAR(20),
  description VARCHAR(20)
  actions INT 
  FOREIGN KEY (actions) REFERENCES action(id_actions);

Table facultative 
CREATE TABLE ville(
  id INTEGER,
  nom VARCHAR(10),
  pays VARCHAR(30),
  nb_eleves INT,
  date_creation DATE
)

CREATE TABLE utilisateur(
  id_utilisateurs INT PRIMARY KEY,
  nom VARCHAR(10),
  prenom VARCHAR(10),
  surnom VARCHAR(10),
  mot_de_passe VARCHAR(50),
  description(VARCHAR(200),
  date_utilisation DATE)





  
